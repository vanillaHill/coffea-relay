# Environment Configuration
NODE_ENV=development
PORT=3003

# Database (if using Redis for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Blockchain RPC Endpoints
# Primary provider (Alchemy) - will be used first
ALCHEMY_MAINNET_RPC_URL=https://eth-mainnet.alchemyapi.io/v2/YOUR_PROJECT_ID

# Fallback provider (Infura) - will be used if Alchemy fails  
INFURA_MAINNET_RPC_URL=https://mainnet.infura.io/v3/YOUR_PROJECT_ID

# Sepolia testnet providers for gasless transaction testing
ALCHEMY_SEPOLIA_RPC_URL=https://eth-sepolia.alchemyapi.io/v2/YOUR_PROJECT_ID
INFURA_SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_PROJECT_ID

# Legacy support - if ETHEREUM_RPC_URL is set, it will be used as Alchemy URL
ETHEREUM_MAINNET_RPC_URL=https://eth-mainnet.alchemyapi.io/v2/YOUR_PROJECT_ID

# Hardhat mainnet fork for local development
HARDHAT_MAINNET_RPC_URL=http://localhost:8545

# Relay Service Configuration
RELAY_PRIVATE_KEY=your_relay_service_private_key_here
RELAY_WALLET_ADDRESS=0x...

# Gas Configuration
DEFAULT_GAS_LIMIT=500000
GAS_PRICE_MULTIPLIER=1.1
MAX_GAS_PRICE_GWEI=100

# Monitoring & Logging
LOG_LEVEL=info
ENABLE_SWAGGER=true

# Security
JWT_SECRET=your_jwt_secret_here
API_KEY_SALT=your_api_key_salt

# Transaction Monitoring
TRANSACTION_TIMEOUT_MS=300000
POLLING_INTERVAL_MS=5000
MAX_RETRY_ATTEMPTS=60